@model IEnumerable<ATNB.Models.TblCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminPage.cshtml";
}

<h2>Categories List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered" id="tblCat">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th><th></th><th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <div>
                        <a href="" data-toggle="modal" data-target="#@item.CategoryId">Details</a>
                        <div class="modal fade" id="@item.CategoryId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h3 class="modal-title" id="exampleModalLabel">Details Category</h3>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        @{ Html.RenderPartial("~/Areas/Admin/Views/Categories/Details.cshtml", item);}
                                        <p type="button" class="glyphicon glyphicon-backward" data-dismiss="modal"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <td>
                    <div>
                        <a href="" data-toggle="modal" data-target="#@item.CategoryId-a">Edit</a>
                        <div class="modal fade" id="@item.CategoryId-a" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h3 class="modal-title" id="exampleModalLabel">Editing Category</h3>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        @{ Html.RenderPartial("~/Areas/Admin/Views/Categories/Edit.cshtml", item);}
                                        <p type="button" class="glyphicon glyphicon-backward" data-dismiss="modal"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
                <td>
                    <div>
                        <a href="" data-toggle="modal" data-target="#@item.CategoryId-b">Delete</a>
                        <div class="modal fade" id="@item.CategoryId-b" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h3 class="modal-title" id="exampleModalLabel">Confirm Deleting Category</h3>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        @{ Html.RenderPartial("~/Areas/Admin/Views/Categories/Delete.cshtml", item);}
                                        <p type="button" class="glyphicon glyphicon-backward" data-dismiss="modal"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
                                            }
    </tbody>
</table>
