@model IEnumerable<ATNB.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminPage.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered" id="tableUser">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <div>
                        <a href="" data-toggle="modal" data-target="#@item.UserName">Details</a>
                        <div class="modal fade" id="@item.UserName" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h3 class="modal-title" id="exampleModalLabel">Details User</h3>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        @{ Html.RenderPartial("~/Areas/Admin/Views/Users/Details.cshtml", item);}
                                        <p type="button" class="glyphicon glyphicon-backward" data-dismiss="modal"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <td>
                    <div>
                        <a href="" data-toggle="modal" data-target="#@item.UserName-a">Edit</a>
                        <div class="modal fade" id="@item.UserName-a" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h3 class="modal-title" id="exampleModalLabel">Editing User @item.UserName</h3>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        @{ Html.RenderPartial("~/Areas/Admin/Views/Users/Edit.cshtml", item);}
                                        <p type="button" class="glyphicon glyphicon-backward" data-dismiss="modal"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
                <td>
                    <div>
                        <a href="" data-toggle="modal" data-target="#@item.UserName-b">Delete</a>
                        <div class="modal fade" id="@item.UserName-b" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h3 class="modal-title" id="exampleModalLabel">Confirm Deleting User</h3>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        @{ Html.RenderPartial("~/Areas/Admin/Views/Users/Delete.cshtml", item);}
                                        <p type="button" class="glyphicon glyphicon-backward" data-dismiss="modal"></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
                                            }
    </tbody>
</table>


